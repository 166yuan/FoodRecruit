<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>


        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <!-- 这里项目的数据库名,统一为：foodrecruit-->
        <property name="hibernate.connection.url">jdbc:mysql:///foodrecruit</property>
        <!-- 这里写你们自己的mysql用户名-->
        <property name="hibernate.connection.username">root</property>
        <!-- 这里写你们自己的mysql的密码-->
        <property name="hibernate.connection.password">root</property>
        <property name="show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="connection.useUnicode">true</property>
        <property name="connection.characterEncoding">UTF-8</property>

        <mapping class="com.recruit.user.model.User"/>
        <mapping class="com.recruit.competition.model.Team"/>
        <mapping class="com.recruit.competition.model.Competition"/>
        <mapping class="com.recruit.competition.model.CompetAndTeam"/>
        <mapping class="com.recruit.Model.Major"/>
        <mapping class="com.recruit.Model.Classes"/>
        <mapping class="com.recruit.score.model.Score"/>
        <mapping class="com.recruit.experiment.model.Experiment"/>
        <mapping class="com.recruit.experUser.model.ExperUser"/>
        <mapping class="com.recruit.notification.model.Notification"/>
        <mapping class="com.recruit.publicLog.model.PublishLog"/>
    </session-factory>
</hibernate-configuration>