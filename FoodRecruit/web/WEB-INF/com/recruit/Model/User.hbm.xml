<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.recruit.model.User" table="user">
		<id name="id">
		 <generator class="identity"/>
		</id>
		<property name="account" not-null="true" unique  ="true"></property>
		<property name="password" not-null="true" ></property>
        <property name="type" not-null="true" ></property>
        <property name="status"  ></property>
        <property name="createTime"  not-null="true"></property>
        <property name="updateTime"  ></property>
        <property name="name" not-null="true" ></property>
        <property name="sex"  ></property>
        <property name="major"  ></property>
        <property name="classes"  ></property>
        <property name="phone"  ></property>
        <property name="email"  ></property>
        <property name="qq"  ></property>
        <property name="address"  ></property>
        <property name="self_info"  ></property>
		</class>
</hibernate-mapping>
