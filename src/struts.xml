<?xml version="1.0" encoding="GBK" ?>
<!-- 指定Struts 2配置文件的DTD信息 -->
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<!-- 配置Struts 2配置文件的根元素 -->
<struts>
	<!-- Struts 2的Action必须放在指定的包空间下定义 -->
	<package name="struts2qs" extends="struts-default">
		<!-- 定义login的Action，该Action的实现类为
			org.crazyit.struts2qs.action.LoginAction类 -->
		<action name="login" class="org.recruit.action.LoginAction">
			<!-- 定义处理结果和视图资源之间映射关系 -->
			<result name="error">/login/error.jsp</result>
			<result name="success">/login/welcome.jsp</result>
		</action>
		<action name="register" class="org.recruit.action.RegisterAction">
			<!-- 定义处理结果和视图资源之间映射关系 -->
			<result name="error">/register/error.jsp</result>
			<result name="success">/register/welcome.jsp</result>
		</action>
	</package>
</struts>
